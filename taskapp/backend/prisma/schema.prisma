generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  status       Status    @default(TODO)
  labels       Label[]
  start_date   DateTime?
  due_date     DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  completed_at DateTime?
}

model Label {
  id         Int      @id @default(autoincrement())
  name       String
  color      String   @default("#000000")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  todos      Todo[]
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
